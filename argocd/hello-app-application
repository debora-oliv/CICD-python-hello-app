apiVersion: argoproj.io/v1alpha1

kind: Application

metadata:
  name: hello-app-python
  namespace: argocd

spec:
  project: default
  source:
    repoURL: https://github.com/debora-oliv/CICD-python-hello-manifests.git
    targetRevision: HEAD
    path: k8s
  destination:
    server: https://kubernetes.default.svc
    namespace: hello-python
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true